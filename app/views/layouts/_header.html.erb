<header class="d-flex navbar navbar-expand-lg sticky-top border-bottom">
  <nav class="container bd-gutter flex-wrap flex-lg-nowrap">
    <a class="navbar-brand mb-0 h1" href="/">
      <% if File.file? "#{Rails.root.join("app", "assets", "images")}/logo.png" %>
        <%= image_tag "logo.png", width: "40", class: "me-2 me-lg-3" %><%= Rails.application.config.site_name %>
      <% else %>
        <%= Rails.application.config.site_name %>
      <% end %>
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <% if current_user %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <%= link_to t(:profile).capitalize, profile_path, class: 'nav-link' %>
          </li>
          <% if defined?(current_user) && current_user.admin? %>
            <li class="nav-item">
              <%= link_to 'Applications OAuth', oauth_applications_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to 'Applications autorisÃ©es', oauth_authorized_applications_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to t(:sign_out).capitalize, destroy_user_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><%= link_to t(:sign_in).capitalize, new_user_session_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to t(:sign_up).capitalize, new_user_registration_path, class: 'nav-link' %></li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>
