<div class="row">
  <div class="col">

    <ul class="nav nav-underline mb-5">
      <li class="nav-item">
        <%= link_to t(:profile).capitalize, profile_path, class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to t(:edit_user).capitalize, edit_user_registration_path, class: "nav-link" %>
      </li>
    </ul>

    <h2><%= current_user.firstname %> <%= current_user.lastname %></h2>

    <div class="row mt-4">
      <div class="col col-md-2">
        <strong><%= t(:firstname).capitalize %></strong>
      </div>
      <div class="col col-md-10">
        <%= current_user.firstname %>
      </div>
    </div>

    <div class="row">
      <div class="col col-md-2">
        <strong><%= t(:lastname).capitalize %></strong>
      </div>
      <div class="col col-md-10">
        <%= current_user.lastname %>
      </div>
    </div>

    <div class="row">
      <div class="col col-md-2">
        <strong>Email</strong>
      </div>
      <div class="col col-md-10">
        <%= current_user.email %>
      </div>
    </div>

    <div class="row">
      <div class="col col-md-2">
        <strong><%= t(:created_at).capitalize %></strong>
      </div>
      <div class="col col-md-10">
        <%= current_user.created_at.date_readable %>
      </div>
    </div>
  </div>
</div>
